import sys

from oslo.config import cfg

from ceilometer import exception
from ceilometer import service
from ceilometer.alarm import storage
from ceilometer.alarm.alarm import Alarm
from ceilometer.openstack.common import log
from ceilometer.openstack.common import jsonutils


LOG = log.getLogger(__name__)

cfg.CONF.register_cli_opts([
    cfg.StrOpt('alarm-file',
               help='alarm file',
               required=True),
])
if __name__ == '__main__':
    service.prepare_service(sys.argv)
    conn = storage.get_connection(cfg.CONF)
    with open(cfg.CONF.alarm_file) as fap:
        for data in jsonutils.loads(fap.read()):
            try:
                alarm = Alarm(**data)
            except exception.InvalidComparisonOperator:
                LOG.exception(_("Fail to load a alarm %s") % data)
            else:
                conn.alarm_add(alarm.items())
